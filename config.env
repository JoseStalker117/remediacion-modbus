# Configuración de Base de Datos
DB_PATH=C:/SQLite/remediacion_2024.db

# Directorio para exportar archivos CSV (Tarjeta SD)
CSV_EXPORT_DIR=D:/

# Configuración de tiempos (en segundos)
SAMPLE_TIME=10
REGISTRATION_TIME=600

# Configuración de sensores - Conjunto 1 (Entrada)
SENSOR_CO2_IN_PORT=COM8
SENSOR_CO2_IN_BAUDRATE=4800
SENSOR_CO2_IN_PARITY=N

SENSOR_NO2_IN_PORT=COM9
SENSOR_NO2_IN_BAUDRATE=4800
SENSOR_NO2_IN_PARITY=N

SENSOR_SO2_IN_PORT=COM10
SENSOR_SO2_IN_BAUDRATE=4800
SENSOR_SO2_IN_PARITY=N

SENSOR_TEMP_1_PORT=COM7
SENSOR_TEMP_1_BAUDRATE=9600
SENSOR_TEMP_1_PARITY=N

# Configuración de sensores - Conjunto 2 (Salida)
SENSOR_CO2_OUT_PORT=COM11
SENSOR_CO2_OUT_BAUDRATE=4800
SENSOR_CO2_OUT_PARITY=N

SENSOR_NO2_OUT_PORT=COM12
SENSOR_NO2_OUT_BAUDRATE=4800
SENSOR_NO2_OUT_PARITY=N

SENSOR_SO2_OUT_PORT=COM13
SENSOR_SO2_OUT_BAUDRATE=4800
SENSOR_SO2_OUT_PARITY=N

SENSOR_TEMP_2_PORT=COM14
SENSOR_TEMP_2_BAUDRATE=9600
SENSOR_TEMP_2_PARITY=N

# Configuración de sensor de Radiación fotosintética
SENSOR_PAR_PORT=COM19
SENSOR_PAR_BAUDRATE=4800
SENSOR_PAR_PARITY=N

# Configuración de comunicación Modbus
MODBUS_TIMEOUT=1
MODBUS_STOPBITS=1
MODBUS_BYTESIZE=8
MODBUS_REGISTER_ADDRESS=0

# Configuración de reintentos de conexión
CONNECTION_RETRY_DELAY=2
